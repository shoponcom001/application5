<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/45e42e65d8.js" crossorigin="anonymous"></script>
  </head>
  
  <body>
    <main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render "users/user", user: @user %>
            <%= render "books/book", book: @book %>
          </div>
        </div>
          <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
              <table class="table">
                <thead>
                  <tr>
                    <th>image</th>
                    <th>name</th>
                    <th colspan="3"></th>
                  </tr>
                  <tbody>
                  <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                      
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <% if current_user.following?(user) %>
                        <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
                      <% else %>
                        <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
                      <% end %>
                    </td>
                    <td>
                       <%= link_to "Show", user_path(user) %>
                    </td>
                  </tr>
                  <% end %>
                  </tbody>
                </thead>
              </table>
          </div>
      </div>
    </main>
     <footer>
      <div class='container mt-5'>
  	    <div class='row'>
    	    <div class='mx-auto'>
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
